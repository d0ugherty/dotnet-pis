@model InfoBoardViewModel

@{
    var stopSelectViewModel = Model.StopSelectViewModel;
    var alertsViewModel = Model.AlertsViewModel;
}

<h2>@Model.Title</h2>

<div id="current-time">
    @await Html.PartialAsync("Components/_Time")
</div>

<div id="train-info-board">
    @await Html.PartialAsync("../Shared/InfoBoard/_Arrivals", Model, ViewData)
</div>

<div id="stop-slct">
    @await Html.PartialAsync("Components/_StopSelect", stopSelectViewModel, ViewData)
</div>

<div id="alerts">
    @await Html.PartialAsync("InfoBoard/_RouteAlertsModal", alertsViewModel, ViewData)
</div>




